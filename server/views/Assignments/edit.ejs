<!-- Includes header.ejs  -->
<%- include ../partials/header.ejs %>
<!-- Includes main_nav.ejs  -->
<%- include ../partials/main_nav.ejs %>
<!-- Style Sheet-->
<link rel="stylesheet" href="/style.css">

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form-group">
                    <!-- Label for Assignment Title-->
                    <label for="titleTextField">Assignemnt Title</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter the Assignment title"
                    name="name" 
                    value="<%= Assignment.title%>"
                    required>
                </div>
                <div class="form-group">
                    <!-- Label for Assignment Course-->
                    <label for="courseTextField">Assignment course</label>
                    <input type="text" class="form-control"
                    id="courseTextField"
                    placeholder="Enter the course the Assignment is for"
                    name="author" 
                    value="<%= Assignment.course%>"
                    required>
                </div>

                <div class="form-group">
                    <!-- Label for Assignment Due Dates-->
                    <label for="duedateTextField">Assignment Due date</label>
                    <input type="text" class="form-control"
                    id="duedateTextField"
                    placeholder="Enter the Due date of the assignment"
                    name="duedate"
                    value="<%= Assignment.duedate%>" 
                    required>
                </div>

                <div class="form-group">
                    <!-- Label for Assignment priority -->
                    <label for="priorityTextArea">Assignment priority</label>
                    <textarea type="text" class="form-control"
                    id="priorityTextField"
                    placeholder="Enter the priority Level of the assignment"
                    name="priceTextField" required>
                    <%= Assignment.priority%>
                </textarea>
                </div>
                <div class="form-group">
                    <!-- Label for Assignment Status-->
                    <label for="statusTextField">Assignment status</label>
                    <input type="text" class="form-control"
                    id="statusTextField"
                    placeholder="Enter your status of the assignment"
                    name="status" 
                    value="<%= Assignment.status%>"
                    required>
                </div>
                
                <div class="form-group">
                    <!-- Label for Assignment chapter-->
                    <label for="chapterTextField">Assignment chapter</label>
                    <input type="text" class="form-control"
                    id="chapterTextField"
                    placeholder="Enter What chapters will be neded to complete the"
                    name="chapter" 
                    value="<%= Assignment.chapter%>"
                    required>
                </div>
                <br>
                <!-- Submit Button-->
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>
                <a href="/assignments" class="btn btn-warning">
                    <!-- Cancel Button-->
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
<!-- Includes footer.ejs  -->
<%- include ../partials/footer.ejs %>